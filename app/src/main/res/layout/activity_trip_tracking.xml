<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light"
    tools:context=".TripTracking">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnViewHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ History"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To: Destination"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Status Indicator -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸš— Trip in progress..."
        android:textSize="16sp"
        android:textColor="@color/green_700"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/rounded_corner_green_light"
        android:layout_marginBottom="16dp" />

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Stats Container -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner_white"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDistanceRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining: 0.0 km"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â±ï¸"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvTimeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETA: 0 min"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCurrentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed: 0 km/h"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Elapsed Time -->
    <TextView
        android:id="@+id/tvElapsedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elapsed: 0m 0s"
        android:textSize="16sp"
        android:textColor="@color/blue_700"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Action Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEndTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ›‘ End Trip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/red_600"
        app:cornerRadius="12dp"
        android:elevation="4dp" />

</LinearLayout>