<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="20sp"
            app:backgroundTint="@color/green_700"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trip History"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#333333" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="14sp"
            app:backgroundTint="@color/red_600"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp" />

    </LinearLayout>

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ðŸš— No trips yet\n\nYour recent trips will appear here"
        android:textSize="18sp"
        android:textColor="#666666"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:lineSpacingExtra="8dp" />

    <!-- Scrollable Trip List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tripsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Subtitle (Will be updated dynamically) -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Trips"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <!-- Trip cards will be added here programmatically -->

        </LinearLayout>

    </ScrollView>

</LinearLayout>